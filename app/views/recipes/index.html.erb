
<div class="row">
	 <% recipes.each do |recipe| %>
        <div class="col-md-4">
          <div class="panel panel-default">
            <div class="panel-heading"><h3><%= link_to recipe.title, recipe %></h3></div>
            <div class="panel-body"><%= link_to recipe do %>
              <%= image_tag recipe.image.url(:small) %>
            <% end %>
            </div>
          </div>
        </div>
        <% end %>
       <% end %>
 </div>


